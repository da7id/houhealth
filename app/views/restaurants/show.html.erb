<h1><%= @restaurant.facility_name.titleize %></h2>
<h2><%= @restaurant.address.titleize %></h2>
<hr>
<h3>Violations</h3>
<dl class="dl-horizontal">
  <% @restaurant.violations.group_by(&:date).each do |date, violations| %>
    <div>
      <h5><%= date.strftime("%m-%d-%Y") %></h5>
      <% violations.each do |v| %>
        <dt><%= v.code %></dt>
        <dd><%= v.comment %></dd>
      <% end %>
    </div>
  <% end %>
</dl>
