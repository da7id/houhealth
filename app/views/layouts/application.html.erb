<!DOCTYPE html>
<html>
<head>
  <title>HouHealth</title>
  <%= stylesheet_link_tag    'application', media: 'all', 
                                'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
  <![endif]-->
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <%= link_to "HouHealth", root_path, id:"logo", class: "navbar-brand" %>
      <%= form_tag(restaurants_path, action: :search, method: :post, id: "search-form",
            class: "navbar-form navbar-right") do %>
        <%= text_field_tag :search, params[:search], 
              placeholder: "Search Restaurants", class: "form-control" %>
        <%= submit_tag "Search", :name => nil, class: "btn btn-default" %>
      <% end %>
    </div> <!-- /.container-fluid -->
  </nav>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
